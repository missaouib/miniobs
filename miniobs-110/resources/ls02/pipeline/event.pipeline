input {
  http {
    port => "8081"
    id => "my_plugin_id1"
    codec => json_lines
    type => 'event'
  }
}

output {
  stdout { codec => rubydebug }

  if [type] == 'event' {
    elasticsearch {
      hosts    => [ 'http://es01:9200' ]
      index    => "%{[elastic_index]}-%{+YYYY.MM.dd}"
      user     => "${ELASTIC_USER}"
      password => "${ELASTIC_PASSWORD}"  # read password from logstash.keystore
    }
  }
}
